{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}